<?xml version="1.0" encoding="utf-8"?>
<transitionSet xmlns:android="http://schemas.android.com/apk/res/android">

    <changeBounds android:duration="250">
        <targets>
            <target android:targetId="@id/image" />
            <target android:targetId="@id/title" />
            <target android:targetId="@id/subtitle" />
        </targets>
    </changeBounds>

    <fade
        android:duration="250"
        android:startDelay="300">
        <targets>
            <target android:targetId="@id/close_button" />
            <target android:targetId="@id/description" />
        </targets>
    </fade>

</transitionSet>
