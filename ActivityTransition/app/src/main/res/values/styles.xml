<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ThemeActionBar</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.Home">
        <item name="android:windowExitTransition">@transition/home_exit</item>
        <item name="android:windowReenterTransition">@transition/home_reenter</item>
    </style>

    <style name="AppTheme.Detail">
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
        <item name="android:windowReturnTransition">@transition/detail_return</item>
    </style>

    <style name="ThemeActionBar" parent="android:Widget.Material.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
    </style>

</resources>
